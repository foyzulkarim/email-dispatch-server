{
  "users": [
    {
      "name": "admin",
      "password_hash": "k+I7+bL7T7gUNfwLAqYhC3FVjOF7Z0yZpJ5JqU8UUx4iCzIC",
      "hashing_algorithm": "rabbit_password_hashing_sha256",
      "tags": ["administrator"]
    },
    {
      "name": "emailservice",
      "password_hash": "emailserviceHashWillBeGeneratedAutomatically",
      "hashing_algorithm": "rabbit_password_hashing_sha256",
      "tags": ["management"]
    }
  ],
  "vhosts": [
    {
      "name": "/"
    },
    {
      "name": "/email-dispatcher"
    }
  ],
  "permissions": [
    {
      "user": "admin",
      "vhost": "/",
      "configure": ".*",
      "write": ".*",
      "read": ".*"
    },
    {
      "user": "admin",
      "vhost": "/email-dispatcher",
      "configure": ".*",
      "write": ".*",
      "read": ".*"
    },
    {
      "user": "emailservice",
      "vhost": "/email-dispatcher",
      "configure": "email.*",
      "write": "email.*",
      "read": "email.*"
    }
  ],
  "topic_permissions": [],
  "parameters": [],
  "global_parameters": [
    {
      "name": "internal_cluster_id",
      "value": "rabbitmq-cluster-id-shared-infra"
    }
  ],
  "policies": [
    {
      "name": "email-queue-policy",
      "pattern": "email.*",
      "vhost": "/email-dispatcher",
      "definition": {
        "message-ttl": 86400000,
        "max-length": 10000,
        "overflow": "reject-publish"
      },
      "priority": 0,
      "apply-to": "queues"
    }
  ],
  "queues": [
    {
      "name": "email-jobs",
      "vhost": "/email-dispatcher",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 86400000,
        "x-max-length": 10000,
        "x-overflow": "reject-publish",
        "x-dead-letter-exchange": "email-dlx"
      }
    },
    {
      "name": "email-retry",
      "vhost": "/email-dispatcher",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 300000,
        "x-max-length": 1000
      }
    },
    {
      "name": "email-dlq",
      "vhost": "/email-dispatcher",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-max-length": 1000
      }
    },
    {
      "name": "webhook-events",
      "vhost": "/email-dispatcher",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 3600000,
        "x-max-length": 5000
      }
    }
  ],
  "exchanges": [
    {
      "name": "email-exchange",
      "vhost": "/email-dispatcher",
      "type": "direct",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    },
    {
      "name": "email-dlx",
      "vhost": "/email-dispatcher",
      "type": "direct",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    },
    {
      "name": "webhook-exchange",
      "vhost": "/email-dispatcher",
      "type": "topic",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    }
  ],
  "bindings": [
    {
      "source": "email-exchange",
      "vhost": "/email-dispatcher",
      "destination": "email-jobs",
      "destination_type": "queue",
      "routing_key": "job.new",
      "arguments": {}
    },
    {
      "source": "email-exchange",
      "vhost": "/email-dispatcher",
      "destination": "email-retry",
      "destination_type": "queue",
      "routing_key": "job.retry",
      "arguments": {}
    },
    {
      "source": "email-dlx",
      "vhost": "/email-dispatcher",
      "destination": "email-dlq",
      "destination_type": "queue",
      "routing_key": "job.failed",
      "arguments": {}
    },
    {
      "source": "webhook-exchange",
      "vhost": "/email-dispatcher",
      "destination": "webhook-events",
      "destination_type": "queue",
      "routing_key": "webhook.*",
      "arguments": {}
    }
  ]
} 
