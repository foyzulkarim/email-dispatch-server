# Application Environment Variables
# Copy this file to .env and update with your actual values

# External Service URLs (if using shared infrastructure)
# For local development with shared infra
MONGODB_URI=mongodb://admin:password123@localhost:27017/email_service?authSource=admin
RABBITMQ_URL=amqp://admin:password123@localhost:5672/email-dispatcher

# For MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/email_service?retryWrites=true&w=majority

# For CloudAMQP (cloud)
# RABBITMQ_URL=amqps://username:password@your-instance.cloudamqp.com/vhost

# For AWS DocumentDB
# MONGODB_URI=mongodb://username:password@docdb-cluster.cluster-xyz.us-east-1.docdb.amazonaws.com:27017/email_service?ssl=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false

# For AWS MQ (RabbitMQ)
# RABBITMQ_URL=amqps://username:password@b-xyz.mq.us-east-1.amazonaws.com:5671/email-dispatcher

# Email Provider Configuration
# Brevo (formerly Sendinblue) - Get your API key from https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here
BREVO_DAILY_QUOTA=300

# SendGrid - Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_DAILY_QUOTA=100

# Mailjet - Get your keys from https://app.mailjet.com/account/api_keys (format: "public_key:private_key")
MAILJET_API_KEY=your_public_key:your_private_key
MAILJET_DAILY_QUOTA=200

# MailerLite (optional)
MAILERLITE_API_KEY=your_mailerlite_api_key_here
MAILERLITE_DAILY_QUOTA=1000

# Default sender information (must be verified in your email provider)
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DEFAULT_FROM_NAME=Your Company Name

# Testing
TEST_EMAIL=your-test-email@example.com

# Debug Mode Configuration
# Set to 'true' to force debug mode (saves emails as HTML files instead of sending)
FORCE_DEBUG_MODE=false

# Optional: Redis URL (if using caching)
# REDIS_URL=redis://localhost:6379 
